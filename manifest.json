{
  "manifest_version": 3,
  "name": "Chat Printer",
  "description": "Print ChatGPT conversations directly.",
  "version": "2.0.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "export-markdown": {
      "suggested_key": {
        "default": "Ctrl+M"
      },
      "description": "Export chat as Markdown"
    },
    "export-html": {
      "suggested_key": {
        "default": "Ctrl+Shift+H"
      },
      "description": "Export chat as HTML"
    }
  },
  "action": {
    "default_popup": "popup.html"
  }
}